<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.chenqiao.day_5_sqlite_demo.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"/>
    <EditText
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:id="@+id/insert_editText1"
        android:layout_weight="0.09" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"/>
    <EditText
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:id="@+id/insert_editText2"
        android:layout_weight="0.33" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"/>
    <EditText
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:id="@+id/insert_editText3"
        android:layout_weight="0.37" />
</LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:id="@+id/insert"
        android:onClick="insert"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"/>
        <EditText
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_editText1"
            android:layout_weight="0.09" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"/>
        <EditText
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_editText2"
            android:layout_weight="0.33" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"/>
        <EditText
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_editText3"
            android:layout_weight="0.37" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delete"
        android:onClick="delete"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"/>
        <EditText
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:id="@+id/update_editText1"
            android:layout_weight="0.09" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"/>
        <EditText
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/update_editText2"
            android:layout_weight="0.33" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"/>
        <EditText
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:id="@+id/update_editText3"
            android:layout_weight="0.37" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/update"
        android:onClick="update"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"/>
        <EditText
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:id="@+id/query_editText1"
            android:layout_weight="0.09" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"/>
        <EditText
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/query_editText2"
            android:layout_weight="0.33" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"/>
        <EditText
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:id="@+id/query_editText3"
            android:layout_weight="0.37" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Query"
        android:id="@+id/query"
        android:onClick="query"/>
</LinearLayout>
